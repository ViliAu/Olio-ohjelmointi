<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"

        android:text="Change text"
        android:textSize="20sp"
    />

    <Button
        android:id="@+id/button_save"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"

        android:text="Change text"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button_load"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"

        android:text="Change text"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/field_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@id/button_hello_world"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true"

        android:text="This text will change."
        android:textSize="30sp"
        android:textAlignment="center"
    />

    <EditText
        android:id="@+id/edit_text_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_above="@id/button_hello_world"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
    />

</RelativeLayout>