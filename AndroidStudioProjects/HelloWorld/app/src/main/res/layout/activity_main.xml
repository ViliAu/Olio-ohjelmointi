<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"

        android:text="Change text"
        android:textSize="20sp"
    />

    <Button
        android:id="@+id/button_save"

        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/field_hello_world"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"

        android:text="Save"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button_load"

        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/field_hello_world"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"

        android:text="Load"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/field_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@id/button_hello_world"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true"

        android:text="This text will change."
        android:textSize="30sp"
        android:textAlignment="center"
    />

    <TextView
        android:id="@+id/field_filename"

        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/field_hello_world"
        android:layout_marginTop="120dp"

        android:text="Filename: "
        android:textSize="25sp"
        android:textAlignment="center"
    />

    <EditText
        android:id="@+id/edit_text_hello_world"

        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_above="@id/button_hello_world"
        android:layout_marginBottom="-100dp"
        android:layout_centerInParent="true"
    />

    <EditText
        android:id="@+id/edit_text_filename"

        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/field_hello_world"
        android:layout_marginTop="120dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/field_filename"
        android:layout_centerInParent="true"
    />

</RelativeLayout>