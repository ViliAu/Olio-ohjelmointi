<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/space_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <EditText
        android:id="@+id/et_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_editor_text"
        android:enabled="false"
        android:text="@string/user_editable" />

    <TextView
        android:id="@+id/tw_editor_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space_toolbar"
        android:textSize="20sp"
        android:textColor="#000000"
        android:lines="5"
        android:text="@string/editable" />
</RelativeLayout>