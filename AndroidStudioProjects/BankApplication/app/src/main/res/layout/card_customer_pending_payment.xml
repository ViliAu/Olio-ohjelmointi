<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/imageview_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_delete"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tw_recurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageview_delete"
            android:text="REOCCURRING"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tw_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="11111111â‚¬"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tw_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_recurrence"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageview_delete"
            android:text="From: FIXX11000000000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tw_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_message"
            android:layout_marginStart="60dp"
            android:text="20.8.2008"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tw_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_account_number"
            android:layout_marginStart="60dp"
            android:text="Ayy lmao massia pojalle ni rutissooo juuuu"
            android:gravity="center"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>