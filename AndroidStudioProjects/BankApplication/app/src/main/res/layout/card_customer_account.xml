<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/imageview_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tw_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageview_account"
            android:text="EXAMPLEACCOUNT"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tw_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="11111111â‚¬"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tw_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_account_name"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/imageview_account"
            android:text="Number: FIXX11000000000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tw_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_account_number"
            android:layout_marginStart="75dp"
            android:text="Type: SAVINGS"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tw_special_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tw_account_number"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/tw_account_type"
            android:text="SPECIAL INFO HERE"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>