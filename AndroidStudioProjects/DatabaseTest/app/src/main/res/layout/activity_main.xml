<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tw_db_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Pankin BIC" />

    <Button
        android:id="@+id/button_db_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tw_db_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Hae kannasta pankin bic" />

    <EditText
        android:id="@+id/et_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_db_query"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Anna pankin nimi" />


</RelativeLayout>